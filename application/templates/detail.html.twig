{% extends "base.html.twig" %}
{% block title %}Détails de l'annonce{% endblock title %}

    {% block h2 %}Détails{% endblock h2 %}
    {% block home %}<a href="/" class="redirect"><svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" class="home"><path d="M21 13v10h-6v-6h-6v6h-6v-10h-3l12-12 12 12h-3zm-1-5.907v-5.093h-3v2.093l3 3z"/></svg></a>{% endblock home %}


{% block content %}
<div class="container center-annonce col-10">

    <div class="seeDetails row">
        <div class="col">
            <div class="detail-img-size">
                <p><img src="{{basepath}}/style/medias/placeholder.jpg" alt="" class="detail-img-annonce"></p>
            </div>
        </div>
        <div class="col">

            <div class="details-size">
                <div>
                    <div>
                        <h3 class="detail-titre">{{ annonce.ann_titre }}</h3>
                    </div>
                    <div class="row">
                        <div class="col">
                            <h3>Catégorie : </h3>
                        </div>
                        <div class="col">
                            <p class="cat-filter"><a href="" class="btn btn-danger">{{annonce.cat_libelle}}</a> </p>
                        </div>
                    </div>
                    {% if  annonce.ann_prix %}                        
                    <div class="row">
                        <div class="col">
                            <h3>Prix :</h3>
                        </div>
                        <div class="col">
                            <p>{{annonce.ann_prix}}</p>
                        </div>
                    </div>
                    {% endif %}

                    <h3>Description : <br> </h3>
                    <p>{{annonce.ann_description}}</p>
                </div>
            </div>
            <div class="details-size">
                <h3>Contacter le vendeur :</h3>
                <div class="seller-infos">
                    <div class="row">
                        <div class="col-2">
                            <p><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M19 7.001c0 3.865-3.134 7-7 7s-7-3.135-7-7c0-3.867 3.134-7.001 7-7.001s7 3.134 7 7.001zm-1.598 7.18c-1.506 1.137-3.374 1.82-5.402 1.82-2.03 0-3.899-.685-5.407-1.822-4.072 1.793-6.593 7.376-6.593 9.821h24c0-2.423-2.6-8.006-6.598-9.819z"/></svg>{{annonces.usr_nom}} {{annonces.usr_prenom}}</p>
    
                        </div>
                        <div class="col">
                            <p>{{annonce.usr_prenom}} <span>{{annonce.usr_nom}}</span></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <p><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M12 12.713l-11.985-9.713h23.97l-11.985 9.713zm0 2.574l-12-9.725v15.438h24v-15.438l-12 9.725z"/></svg></p>
                        </div>
                        <div class="col">
                            <p>{{annonce.usr_courriel}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <p><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M18.48 22.926l-1.193.658c-6.979 3.621-19.082-17.494-12.279-21.484l1.145-.637 3.714 6.467-1.139.632c-2.067 1.245 2.76 9.707 4.879 8.545l1.162-.642 3.711 6.461zm-9.808-22.926l-1.68.975 3.714 6.466 1.681-.975-3.715-6.466zm8.613 14.997l-1.68.975 3.714 6.467 1.681-.975-3.715-6.467z"/></svg></p>
                        </div>
                        <div class="col">
                            <p>{{annonce.usr_telephone}}</p>
                        </div>
                    </div>
                </div>
            </div>
            <p class="p-btn-dwl"><a href="" download class="btn btn-danger btn-dwl"> Télécharger cette annonce <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><path d="M12 21l-8-9h6v-12h4v12h6l-8 9zm9-1v2h-18v-2h-2v4h22v-4h-2z"/></svg></a></p>
        </div>
    </div>

</div>

{% endblock content %}
{% block script %}
        
{% endblock script %}